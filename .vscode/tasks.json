{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Install",
            "type": "shell",
            "command" : ["cd ${workspaceFolder}/simple_server_client/_build_install &&",
                        "cmake -DCMAKE_BUILD_TYPE=Debug -DCMAKE_INSTALL_PREFIX=install ../../fdbus/cmake &&",
                        "make &&",
                        "make install"
                    ]
        },
        {
            "label": "Build Simple Server",
            "type": "shell",
            "command" : "cd ${workspaceFolder}/simple_server_client/simple_server && cmake . && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[
                "$gcc"
            ]
        },
        {
            "label": "Build Simple Client",
            "type": "shell",
            "command" : "cd ${workspaceFolder}/simple_server_client/simple_client && cmake . && make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher":[
                "$gcc"
            ]
        }
    ]
}